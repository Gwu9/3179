{"$schema": "https://vega.github.io/schema/vega-lite/v5.json",
"height": 800,
"width":1000,
"title": {
  "text":"The Location of NBA teams in the United States",
  "color": "darkblue",
  "fontSize" : 20},

"layer": [
  {
    "data": {
      "url": "https://gwu9.github.io/3179/assignment2/america_g.json",
      "format": {
        "type": "topojson",
        "feature": "ne_110m_admin_1_states_provinces"
      }
    },
    "transform":[{
      "lookup":"properties.name",
      "from":{
        "data":{
          "url":"https://gwu9.github.io/3179/assignment2/data.json"
        },
        "key":"name",
        "fields":["number"]
      }
    },
  {"calculate": "datum.number + 0.1", "as": "Team numbers" }
],
    "mark":"geoshape",
    "encoding":{
      "color":{
        "field":"Team numbers",
        "type":"quantitative",
        "scale":{
            "domain":[0, 1, 2, 3, 4],
            "range": ["#f0f0f0","#deebf7","#9ecae1","#3182bd"]
        }
        
      },
      "tooltip":[
        {"field":"properties.name","type":"nominal","title":"state"},
        {"field":"city","type":"quantitative"}
        ]
    }
     
  },
  {
    "data": {
      "url": "https://gwu9.github.io/3179/assignment2/data.json"
    },
    "encoding": {
      "longitude": {
        "field": "lon",
        "type": "quantitative"
      },
      "latitude": {
        "field": "lat",
        "type": "quantitative"
      }
    },
    "layer": [{
      "mark": {
        "type": "circle",
        "color": "orange"
      }
    }, 
    {
      "mark":{
        "type":"geoshape"
      },
        "encoding":{
          "color":{
            "field":"number",
            "type":"quantitative",
            "scale":{
                "domain":[0, 1, 2, 3, 4],
                "range": ["#f0f0f0","#deebf7","#9ecae1","#3182bd"]
            }
          }
        }

  },
    {
      "mark": {
        "type": "text",
        "dy": -10
      },
      "encoding": {
        "text": {"field": "Team", "type": "nominal"}
      }
    }]
  }
]
}
