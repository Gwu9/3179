{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "repeat": {
      "row": ["Field Goal Percentage", "Assists_per_Game", "Points_per_Game","Total Rebounds_per_Game"],
      "column": ["Total Rebounds_per_Game", "Points_per_Game", "Assists_per_Game","Field Goal Percentage"]
    },
    "spec": {
      "data": {"url": "https://gwu9.github.io/3179/assignment2/five MVP .csv"},
      "mark": "point",
      "params": [
        {
          "name": "brush",
          "select": {
            "type": "interval",
            "resolve": "union",
            "on": "[mousedown[event.shiftKey], window:mouseup] > window:mousemove!",
            "translate": "[mousedown[event.shiftKey], window:mouseup] > window:mousemove!",
            "zoom": "wheel![event.shiftKey]"
          }
        },
        {
          "name": "grid",
          "select": {
            "type": "interval",
            "resolve": "global",
            "translate": "[mousedown[!event.shiftKey], window:mouseup] > window:mousemove!",
            "zoom": "wheel![!event.shiftKey]"
          },
          "bind": "scales"
        }
      ],
      "encoding": {
        "x": {"field": {"repeat": "column"}, "type": "quantitative"},
        "y": {
          "field": {"repeat": "row"},
          "type": "quantitative",
          "axis": {"minExtent": 30}
        },
        "color": {
          "condition": {
            "param": "brush",
            "field": "Name",
            "type":"nominal",
            "scale":{
              "domain":[
                "LeBron James",
                "James Harden",
                "Nikola Jokic",
                "Stephen Curry",
                "Giannis Antetokounmpo"
              ],
              "range":[
                "#2c7fb8",
                "#756bb1",
                "#e6550d",
                "#c51b8a",
                "#fa9fb5"

              ]
            }
          }
        }
      }
    }
  }
