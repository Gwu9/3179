{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 500,
  "title": {
    "text": "The Location of NBA teams in the United States",
    "color": "darkblue",
    "fontSize": "20"
  },
  "projection": {"type": "albersUsa"},
  "layer": [
    {
      "data": {
        "url": "https://gwu9.github.io/3179/assignment2/america_g.json",
        "format": {
          "type": "topojson",
          "feature": "ne_110m_admin_1_states_provinces"
        }
      },
      "mark": {"type": "geoshape", "fill": "lightblue", "stroke": "white"}
    },
    {
      "data": {"url": "https://gwu9.github.io/3179/assignment2/data.json"},
      "encoding": {
        "longitude": {"field": "lon", "type": "quantitative"},
        "latitude": {"field": "lat", "type": "quantitative"}
      },
      "layer": [
        {"mark": {"type": "circle", "color": "orange"}},
        {
          "mark": {"type": "text", "dy": -10},
          "encoding": {"text": {"field": "city", "type": "nominal"}}
        }
      ]
    }
  ]
}
